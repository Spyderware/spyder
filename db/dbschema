Table user {
  user_id char(20)
  username varchar(25)
}

Table category {
  category_id serial
  category varchar(15)
}

Table post {
  post_id serial
  user_id int
  title varchar(35)
  body varchar(255)
  category_id int
  removed bool
}

Table comment {
  comment_id serial
  user_id int
  post_id int
  comment varchar(50)
  removed bool
}

Table post_upvote {
  post_interaction_id serial
  user_id int
  post_id int
}

Ref: post_upvote.post_id > post.post_id
Ref: post_upvote.user_id > user.user_id
Ref: post.category_id > category.category_id
Ref: post.user_id > user.user_id
Ref: comment.user_id > user.user_id
Ref: comment.post_id > post.post_id